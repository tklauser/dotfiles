export OEBASE=/home/tklauser/src/oe

if [ -d $OEBASE ] ; then
  path_append $OEBASE/bitbake/bin
  export BBPATH=$OEBASE/build:$OEBASE/openembedded
  export BB_ENV_EXTRAWHITE="OEBASE"
fi


{
	[[ ${profile} == ${CHPWD_PROFILE} ]] && return 1
	print "chpwd(): Switching to profile: $profile"

	export GIT_AUTHOR_EMAIL="klto@zhaw.ch"
	export GIT_COMMITTER_EMAIL="klto@zhaw.ch"
